<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    tools:context=".MemoryActivity" >

    <TableLayout
        android:id="@+id/memTableLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="121dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/newButton"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="83dp"
        android:gravity="center|center_vertical"
        android:onClick="hint_click"
        android:paddingLeft="10dp"
        android:text="HINT"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreTextView"
        style="@style/OrangeFont"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/newButton"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView1"
        style="@style/NormalText.Little"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="72dp"
        android:height="8dp"
        android:text="@string/game_punten_text"
        android:textColor="@color/GREY"
        android:textSize="11sp" />
    
    <LinearLayout
    	android:id="@+id/ll_game_start_top_menu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true" >
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button 
            style="@style/AlphaButtonStyle"
            android:id="@+id/btn_alpha_game_process"
			android:layout_width="match_parent"
        	android:layout_height="match_parent"/>
    </RelativeLayout>
    
	<LinearLayout
    	android:id="@+id/ll_game_start_bot_menu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true" >
    </LinearLayout>

</RelativeLayout>