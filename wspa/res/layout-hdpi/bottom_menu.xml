<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/bot_menu_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bot_menu_back" />

    <ImageView
        android:id="@+id/btn_news"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bot_menu_btn_news" />

    <ImageView
        android:id="@+id/btn_memory"
        android:layout_marginTop="12dp"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bot_menu_btn_memory" />

    <ImageView
        android:id="@+id/btn_wspa_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bot_menu_btn_wspa_info" />

    <ImageView
        android:id="@+id/btn_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/bot_menu_btn_notifications" />

</RelativeLayout>