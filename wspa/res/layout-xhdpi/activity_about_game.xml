<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutGameActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/game_info_bg" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/btn_close"
        android:height="25dp" />

    <TextView
        android:id="@+id/titleSpelGameAbout"
        style="@style/OrangeFont.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="33dp"
        android:text="@string/title_speluitleg_about_game"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textSpelGameAbout"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleSpelGameAbout"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="18dp"
        android:text="@string/text_speluitleg_about_game"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleScoreGameAbout"
        style="@style/OrangeFont.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textSpelGameAbout"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="32dp"
        android:text="@string/title_score_about_game"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleScoreGameAbout"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/about_image3" />

    <TextView
        android:id="@+id/textScoreGameAbout"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleScoreGameAbout"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_score_about_game"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleHintsGameAbout"
        style="@style/OrangeFont.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:text="@string/title_hint_about_game"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleHintsGameAbout"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/about_image2" />

    <TextView
        android:id="@+id/textHintsGameAbout"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleHintsGameAbout"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_hint_about_game"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleInstelGameAbout"
        style="@style/OrangeFont.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:text="@string/title_instellingen_about_game"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleInstelGameAbout"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/about_image1" />

    <TextView
        android:id="@+id/textInstelGameAbout"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleInstelGameAbout"
        android:layout_marginLeft="145dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:text="@string/text_instellingen_about_game"
        android:textSize="14sp" />

</RelativeLayout>