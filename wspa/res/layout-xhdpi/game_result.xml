<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameResultLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_result_bg" >

    <Button
        android:id="@+id/btnReGame"
        android:layout_width="260dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="274dp"
        android:text="@string/spel_opn_btn"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textView2"
        style="@style/OrangeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:text="@string/title_game_result"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gameResTextView"
        style="@style/OrangeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deelJeScoeBtn"
        android:layout_width="260dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="316dp"
        android:text="@string/deel_je_btn"
        android:textSize="18sp"
        android:textStyle="bold" />

<!-- android:onClick="deelJeScoeBtn_Click" -->   

	<LinearLayout
    	android:id="@+id/ll_game_result_top_menu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true" >
    </LinearLayout>
	<LinearLayout
    	android:id="@+id/ll_game_result_bot_menu"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true" >
    </LinearLayout>
        	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <Button 
	        android:id="@+id/btn_alpha_game_result"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        style="@style/AlphaButtonStyle"/>
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/highScoreTopLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

</RelativeLayout>