<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
	<style name="ToggleBtnStyle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/toggle_btn_style</item>
        <item name="android:textColor">@color/GREY</item>
		<item name="android:textSize">10sp</item>
    </style>
    <style name="ToggleBtnStyleNotification" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/style_toggle_btn_notification</item>
    </style>
	<style name="SimpleButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_simple</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AlphaButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_alpha</item>
    </style>
    <style name="RadioBtnStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/style_radio_btn</item>
    </style>
    <style name="PointButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_point</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
        <style name="PointButtonStyle.BigTitle" parent="PointButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PointLittleButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_point_little</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteText.TitleTopMenu" parent="WhiteText">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="WhiteText.NormalText" parent="WhiteText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TopMenuTitle.Black" parent="WhiteText">
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalText.Little" parent="NormalText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
        <style name="NormalText.Middle" parent="NormalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalText.Hyperlink" parent="NormalText">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/BLUE</item>
    </style>
    <style name="NormalText.Big" parent="NormalText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OrangeFont">
        <item name="android:textColor">@color/ORANGE</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OrangeFont.Title" parent="OrangeFont">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="OrangeFont.Normal" parent="OrangeFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/plain_text</item>
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/SimpleButtonStyle</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>