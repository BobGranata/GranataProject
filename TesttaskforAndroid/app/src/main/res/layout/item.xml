<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/adv_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:layout_marginRight="16dp"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adv_type"
                android:id="@+id/tvDot"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/adv_type"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_type"
                android:textSize="10sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/adv_photo"
                android:layout_toEndOf="@+id/adv_photo"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_date"
                android:textSize="10sp"
                android:text="TextView"
                android:layout_alignBaseline="@+id/adv_type"
                android:layout_alignBottom="@+id/adv_type"
                android:layout_toRightOf="@+id/tvDot"
                android:layout_toEndOf="@+id/tvDot"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_title"
                android:textSize="12sp"
                android:text="TextView"
                android:layout_below="@+id/adv_type"
                android:layout_alignLeft="@+id/adv_type"
                android:layout_alignStart="@+id/adv_type"
                android:layout_marginTop="5dp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="normal|bold" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adv_price"
                android:textSize="12sp"
                android:layout_below="@+id/adv_title"
                android:layout_alignLeft="@+id/adv_title"
                android:layout_alignStart="@+id/adv_title"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="normal|bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>